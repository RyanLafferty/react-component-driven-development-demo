{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "baseUrl": "src",
    "outDir": "build",
    "jsx": "react",
    "declaration": true,
    //"allowJs": true, // This can sometimes cause issues
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}

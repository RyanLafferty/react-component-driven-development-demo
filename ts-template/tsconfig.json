{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "components": ["src/*"],
    },
    "outFile": "build/index.js",
    "jsx": "react",
    "declaration": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx"
  ]
}
